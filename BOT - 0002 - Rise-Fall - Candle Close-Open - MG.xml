<?xml version="1.0" encoding="UTF-8"?>
<xml xmlns="http://www.w3.org/1999/xhtml">
  <block type="trade_definition_tradeoptions" id="tradeOptions" x="10" y="10">
    <field name="MARKET">synthetic_index</field>
    <field name="SUBMARKET">volatility_index</field>
    <field name="SYMBOL">R_10</field>
    <field name="TRADETYPE">CALLPUT</field>
  </block>
  <block type="trade_definition_contracttype" id="contractType" x="10" y="150">
    <field name="TYPE">CALLPUT</field>
  </block>
  <block type="trade_definition_payout" id="payout" x="10" y="300">
    <field name="AMOUNT">1</field>
  </block>
  <block type="indicators_rsi" id="rsiIndicator" x="250" y="10">
    <field name="PERIOD">14</field>
    <field name="OVERBOUGHT">70</field>
    <field name="OVERSOLD">30</field>
    <value name="INPUT">
      <block type="ticks" id="ticks"/>
    </value>
  </block>
  <block type="controls_if" id="ifCondition" x="500" y="10">
    <value name="IF0">
      <block type="logic_compare" id="compareRSI">
        <field name="OP">LT</field>
        <value name="A">
          <block type="indicators_rsi_value" id="rsiValue">
            <value name="INPUT">
              <block type="ticks" id="ticks2"/>
            </value>
          </block>
        </value>
        <value name="B">
          <block type="math_number" id="rsiThreshold">
            <field name="NUM">30</field>
          </block>
        </value>
      </block>
    </value>
    <statement name="DO0">
      <block type="trade_definition_tradetype" id="tradeRise">
        <field name="TRADETYPE">CALL</field>
      </block>
    </statement>
    <next>
      <block type="controls_if" id="ifCondition2">
        <value name="IF0">
          <block type="logic_compare" id="compareRSI2">
            <field name="OP">GT</field>
            <value name="A">
              <block type="indicators_rsi_value" id="rsiValue2">
                <value name="INPUT">
                  <block type="ticks" id="ticks3"/>
                </value>
              </block>
            </value>
            <value name="B">
              <block type="math_number" id="rsiThreshold2">
                <field name="NUM">70</field>
              </block>
            </value>
          </block>
        </value>
        <statement name="DO0">
          <block type="trade_definition_tradetype" id="tradeFall">
            <field name="TRADETYPE">PUT</field>
          </block>
        </statement>
      </block>
    </next>
  </block>
</xml>
